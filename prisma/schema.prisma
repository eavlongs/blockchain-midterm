generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Blockchain {
    data         String
    hash         String   @id
    previousHash String   @unique
    timestamp    DateTime @db.Timestamptz(3)
    nonce        Int
}

model PendingTransaction {
    id          String   @id @default(uuid())
    fromAddress String
    toAddress   String
    amount      Float
    timestamp   DateTime @db.Timestamptz(3)
    signature   String
}

model Wallet {
    address    String  @id
    privateKey String?
}
